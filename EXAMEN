var i = 3;
while(i>0){
    var regresar;
    i = prompt("ingresa la operacion que quieres realizar" + "\n\n1.- hacer prestamo" + "\n\n2.- salir");
    switch(i){
        case "1":
            var prestamo= prompt("tienes algun prestamo activo si o no");
            switch(prestamo){
                case "si":
                    alert("no te podemoa brindar un prestamo ya que tienes un prestamo activo");
                    break;
                case "no":
                    var datos = prompt("ingresa tu nombre");
                    var equipo=prompt("nombre del equipo que requieres : " + "\n\nteclados " + "\n\nmouse " + "\n\nlaptop ");
                    var cantidad=parseInt(prompt("cantidad de esquipos que requieres"));
                    break;
                    
            }
            break;
        case "2":
        case "salir":
            alert("bye");
            i = 0;
            break;
    }

i--;
}














